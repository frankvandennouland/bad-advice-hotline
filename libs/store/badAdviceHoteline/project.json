{
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "name": "store-bad-advice-hotline",
  "prefix": "bad-advice-hotline",
  "projectType": "library",
  "sourceRoot": "libs/store/badAdviceHoteline/src",
  "tags": ["scope:store"],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/store/bad-advice-hotline",
        "main": "libs/store/badAdviceHoteline/src/index.ts",
        "tsConfig": "libs/store/badAdviceHoteline/tsconfig.lib.json",
        "assets": ["libs/store/badAdviceHoteline/*.md"]
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/store/badAdviceHoteline/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/store/badAdviceHoteline/jest.config.ts"
      }
    }
  }
}
